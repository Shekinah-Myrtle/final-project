{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    {
        "version": "2.0.0",
        "tasks": [
          {
            "label": "Auto Commit and Push",
            "type": "shell",
            "command": "git add . && git commit -m \"Auto commit at $(date +'%Y-%m-%d %H:%M:%S')\" && git push",
            "problemMatcher": [],
            "group": {
              "kind": "build",
              "isDefault": true
            }
          }
        ]
      }
      
}